<% if logged_in? %>
	<%= render 'layouts/header' %>
	<section class="static-page">
		<div class="alert alert-success">
			<% flash.each do |message_type, message| %>
				<div class="alert alert-<%= message_type %>"><%= message %></div>
			<% end %>
		</div>
		<div class="container">
			<div class="inner">
				<div class="row">
					<%# <span><%= pluralize(current_user.microposts.count, "件の投稿") %>
					<div class="home-micropost">
						<div class="show-micropost-button">
							<div class="show-micropost-button-user"><%= link_to 'フォロー中の投稿', root_path, local: false %></div>
							<div class="show-micropost-button-favorite"><%= link_to '全ての投稿', all_posts_path, local: false %></div>
						</div>
						<%= render 'shared/feed' %>
					</div>
				</div>
			<% else %>
				<div class="static-page_home">
					<p class="second-title">公務員の次のステップへ</p>
					<h1 class="main_title"><a href = "">NEXT公務員</a></h1>
					<p class="about">~ 公務員を辞めたい、でも勇気がでない。そんな悩める公務員のためのSNS ~</p>
					<div class="sign-up"><%= link_to "サインアップ", signup_path %></div>
					<div class="sign-in"><%= link_to "ログイン", login_path %></div>
				</div>
			<% end %>
		</section>
	</div>
