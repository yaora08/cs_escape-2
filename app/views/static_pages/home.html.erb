<section class="static-page">
	<div class="alert alert-success">
		<% flash.each do |message_type, message| %>
			<div class="alert alert-<%= message_type %>"><%= message %></div>
		<% end %>
	</div>
	<% if logged_in? %>
		<%= render 'layouts/header' %>
		<div class="main">
			<div class="container">
				<div class="row">
					<div class="col-md-9">
						<div class="show-micropost">
						<span><%= pluralize(current_user.microposts.count, "件の投稿") %></span>
						<%= render 'shared/feed' %>
						</div>
					</div>
				</div>
			</div>
		<% else %>
			<div class="static-page_home">
				<p class="second-title">公務員の次のステップへ</p>
				<h1 class="main_title"><a href = "">NEXT公務員</a></h1>
				<p class="about">~ 公務員を辞めたい、でも勇気がでない。そんな悩める公務員のためのSNS ~</p>
				<div class="sign-up"><%= link_to "サインアップ", signup_path %></div>
				<div class="sign-in"><%= link_to "ログイン", login_path %></div>
			</div>
		<% end %>
	</section>
