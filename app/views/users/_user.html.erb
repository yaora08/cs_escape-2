<li>
  <%= link_to gravatar_for(user, size: 100), user %>
  <%= link_to user.name, user %>
   <% if (current_user.admin? && current_user != user) || (!current_user.admin? && current_user == user) %> 
    | <%= link_to "削除", user_path(user), method: :delete,
                                  data: { confirm: "本当に削除しますか？" } %>
  <% end %> 
</li>