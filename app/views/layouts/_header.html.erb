<script type="text/javascript">
	$(function() {
	$('.drawer-icon').on('click', function(e) {
	e.preventDefault();
	$('.drawer-icon').toggleClass('is-active');
	$('.drawer-content').toggleClass('is-active');
	$('.drawer-background').toggleClass('is-active');
	return false;
	});
	});
</script>
